{
  "compilerOptions": {
    "target": "ESNext", // Specify the target JavaScript version (ES6 is a common choice)
    "module": "ESNext", // Specify the module code generation (commonjs for Node.js)
    "lib": ["DOM", "ESNext"],
    "strict": false, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable compatibility with ES modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./addons",
    "sourceMap": false,
    "allowJs": true
  },
  "include": ["addons"],
  "exclude": ["node_modules"] // Exclude the node_modules directory
}
